{
  "name": "@zylem/game-lib",
  "version": "0.5.0",
  "type": "module",
  "description": "A powerful and easy-to-use framework for creating simple 3D digital interactive applications using TypeScript.",
  "license": "MIT",
  "author": "Tim Cool",
  "repository": {
    "type": "git",
    "url": "https://github.com/zylem-game-lib/zylem.git"
  },
  "contributors": [
    {
      "name": "Tim Cool",
      "email": "tcoolpg@gmail.com",
      "url": "https://github.com/tcool86"
    }
  ],
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js",
      "require": null
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.js"
    },
    "./camera": {
      "types": "./dist/camera.d.ts",
      "import": "./dist/camera.js"
    },
    "./stage": {
      "types": "./dist/stage.d.ts",
      "import": "./dist/stage.js"
    },
    "./entities": {
      "types": "./dist/entities.d.ts",
      "import": "./dist/entities.js"
    },
    "./actions": {
      "types": "./dist/actions.d.ts",
      "import": "./dist/actions.js"
    },
    "./behaviors": {
      "types": "./dist/behaviors.d.ts",
      "import": "./dist/behaviors.js"
    }
  },
  "keywords": [
    "game",
    "three",
    "typescript",
    "rapier3d",
    "physics",
    "framework",
    "vite",
    "simple",
    "interactive"
  ],
  "main": "./dist/main.js",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "biome check .",
    "typecheck": "tsc --noEmit",
    "test": "vitest --reporter=verbose",
    "coverage": "vitest run --coverage"
  },
  "dependencies": {
    "@dimforge/rapier3d-compat": "^0.11.2",
    "@sinclair/typebox": "^0.34.41",
    "@types/howler": "^2.2.12",
    "bitecs": "^0.3.40",
    "howler": "^2.2.4",
    "idb-keyval": "^6.2.2",
    "msgpackr": "^1.11.5",
    "nanoid": "^5.1.5",
    "stats.js": "^0.17.0",
    "three": "^0.180.0",
    "valtio": "^2.1.7"
  },
  "peerDependencies": {
    "@dimforge/rapier3d-compat": "^0.11.2",
    "bitecs": "^0.3.40",
    "howler": "^2.2.4",
    "nanoid": "^5.1.5",
    "three": "^0.180.0",
    "valtio": "^2.1.7"
  },
  "devDependencies": {
    "@types/node": "^20.19.13",
    "@types/stats.js": "^0.17.4",
    "@types/three": "0.171.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^27.2.0",
    "tslib": "^2.8.1",
    "tsup": "^8.5.1",
    "typescript": "5.8.2",
    "vite-plugin-solid": "^2.11.8",
    "vitest": "^4.0.9"
  }
}

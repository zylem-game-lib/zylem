{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["vite/client", "vite-plugin-glsl/ext"],
    "noEmit": true,
    "exactOptionalPropertyTypes": false,
    "baseUrl": ".",
    "paths": {
      "@zylem/styles": ["../zylem-styles/src/index.ts"],
      "@zylem/game-lib": ["../game-lib/src/api/main.ts"],
      "~/*": ["../game-lib/src/*"],
      "@/*": ["../game-lib/src/*"],
      "@lib/debug/*": ["../editor/src/debug/*"],
      "@lib/ui/*": ["../editor/src/ui/*"],
      "@lib/*": ["../game-lib/src/lib/*"],
      "@interfaces/*": ["../game-lib/src/lib/interfaces/*"],
      "@state/*": ["../game-lib/src/state/*"]
    }
  },
  "include": ["src", "*.html", "../editor/src", "../zylem-styles/src"],
  "references": [{ "path": "../game-lib" }]
}
